{
  "info": {
    "name": "JagoIndia Blog API",
    "description": "Complete API collection for JagoIndia Backend",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@jagoindia.com\",\n  \"password\": \"admin123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Blogs - Public",
      "item": [
        {
          "name": "Get All Blogs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs?page=1&limit=10&sort=-createdAt",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "sort",
                  "value": "-createdAt"
                }
              ]
            }
          }
        },
        {
          "name": "Get Blog by Slug",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/my-blog-slug",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "my-blog-slug"]
            }
          }
        }
      ]
    },
    {
      "name": "Blogs - Admin",
      "item": [
        {
          "name": "Create Blog",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Blog\",\n  \"content\": \"This is the blog content with all details...\",\n  \"thumbnail\": \"https://example.com/image.jpg\",\n  \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs"]
            }
          }
        },
        {
          "name": "Update Blog",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"content\": \"Updated content...\",\n  \"thumbnail\": \"https://example.com/new-image.jpg\",\n  \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/:blogId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", ":blogId"]
            }
          }
        },
        {
          "name": "Change Blog Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"disabled\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/:blogId/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", ":blogId", "status"]
            }
          }
        },
        {
          "name": "Delete Blog",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/:blogId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", ":blogId"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ]
}
